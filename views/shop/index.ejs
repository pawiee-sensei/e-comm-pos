<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <!-- Shop CSS -->
  <link rel="stylesheet" href="/css/shop.css">
</head>
<body>

<!-- HEADER -->
<header class="shop-header">
  <div class="container d-flex justify-content-between align-items-center py-3">
    <h4 class="mb-0">Coffee Shop</h4>

    <form method="GET" action="/shop" class="shop-search-form">
  <input
    type="text"
    name="q"
    class="form-control shop-search"
    placeholder="Search coffee, drinks, pastryâ€¦"
    value="<%= q || '' %>"
  >
</form>


    <div class="shop-actions">
      <a href="/cart" class="cart-icon position-relative">
  ðŸ›’
  <% if (session?.cart) { %>
    <span class="badge bg-dark position-absolute top-0 start-100 translate-middle">
      <%= Object.keys(session.cart).length %>
    </span>
  <% } %>
</a>

      <a href="/login" class="btn btn-outline-dark btn-sm">Login</a>
    </div>
  </div>
</header>

<!-- BANNER -->
<section class="shop-banner">
  <div class="container text-center">
    <h2>Freshly Brewed. Calmly Served.</h2>
    <p>Quality coffee, crafted daily.</p>
  </div>
</section>

<!-- CATEGORY TABS -->
<section class="shop-categories">
  <div class="container d-flex gap-2 flex-wrap">

    <a
      href="/shop"
      class="btn btn-sm <%= !activeCategory ? 'btn-dark' : 'btn-light' %>">
      All
    </a>

    <% categories.forEach(c => { %>
      <a
        href="/shop?category=<%= c.id %>"
        class="btn btn-sm <%= String(activeCategory) === String(c.id) ? 'btn-dark' : 'btn-light' %>">
        <%= c.name %>
      </a>
    <% }) %>

  </div>
</section>



<!-- PRODUCTS -->
<section class="shop-products">
  <div class="container">
    <div class="row g-4">
      <% products.forEach(p => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <%- include('./partials/product-card', { p }) %>
        </div>
      <% }) %>
    </div>
  </div>
</section>

</body>
</html>
