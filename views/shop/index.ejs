<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <!-- Shop CSS -->
  <link rel="stylesheet" href="/css/shop.css">
</head>
<body>

<!-- HEADER -->
<header class="shop-header">
  <div class="container d-flex justify-content-between align-items-center py-3">
    <h4 class="mb-0">Coffee Shop</h4>

    <input
      type="text"
      class="form-control shop-search"
      placeholder="Search productsâ€¦"
      disabled
    >

    <div class="shop-actions">
      <span class="cart-icon">ðŸ›’</span>
      <a href="/login" class="btn btn-outline-dark btn-sm">Login</a>
    </div>
  </div>
</header>

<!-- BANNER -->
<section class="shop-banner">
  <div class="container text-center">
    <h2>Freshly Brewed. Calmly Served.</h2>
    <p>Quality coffee, crafted daily.</p>
  </div>
</section>

<!-- CATEGORY TABS -->
<section class="shop-categories">
  <div class="container d-flex gap-3">
    <button class="btn btn-light active">All</button>
    <button class="btn btn-light">Coffee</button>
    <button class="btn btn-light">Drinks</button>
    <button class="btn btn-light">Pastry</button>
  </div>
</section>

<!-- PRODUCTS -->
<section class="shop-products">
  <div class="container">
    <div class="row g-4">
      <% products.forEach(p => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <%- include('./partials/product-card', { p }) %>
        </div>
      <% }) %>
    </div>
  </div>
</section>

</body>
</html>
