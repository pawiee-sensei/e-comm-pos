<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title : 'Admin' %></title>

  <!-- Bootstrap CSS (allowed by CSP) -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-wrapper">
    <!-- Sidebar -->
    <nav class="admin-sidebar" id="adminSidebar">
      <div class="sidebar-header">
        <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle sidebar">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </button>
        <span class="sidebar-logo-text">Admin</span>
      </div>

      <ul class="sidebar-nav">
           <li class="sidebar-item active" data-panel="dashboard-panel">
  <span class="icon icon-dashboard"></span>
  <span class="label">Dashboard</span>
</li>

            <li class="sidebar-item" data-panel="products-panel">
  <span class="icon icon-products"></span>
  <span class="label">Products</span>
</li>

        <li class="sidebar-item" data-panel="pos-panel">
  <span class="icon icon-pos"></span>
  <span class="label">POS</span>
</li>

        <li class="sidebar-item" data-panel="strategy-panel">
  <span class="icon icon-strategy"></span>
  <span class="label">Strategy</span>
</li>

      </ul>

      <div class="sidebar-footer">
        <span class="user-name"><%= user ? user.name : '' %></span>
       <a href="/logout" class="logout-btn">
  <span class="logout-icon"></span>
  <span class="logout-text">Logout</span>
</a>




      </div>
    </nav>

    <!-- Main content -->
    <main class="admin-main">
      <%- include('../admin/panels') %>
    </main>
  </div>

  <!-- Admin JS -->
  <script src="/js/adminSidebar.js"></script>
</body>
</html>
